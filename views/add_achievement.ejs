<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= appName %> - Add Achievement</title>
    <link rel="stylesheet" href="/main.css">
</head>
<body>
    <h1><%= appName %> - Add Achievement for <%= username %></h1>

    <!-- Display errors -->
    <% if (errors && errors.length > 0) { %>
        <ul class="error-list">
            <% errors.forEach(function(error) { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>

    <form action="/achievements/added" method="POST">
        <label for="activity">Activity</label>
        <input type="text" id="activity" name="activity" required><br><br>

        <label for="date">Date (YYYY-MM-DD)</label>
        <input type="date" id="date" name="date" required><br><br>

        <label for="duration_minutes">Duration (minutes)</label>
        <input type="number" id="duration_minutes" name="duration_minutes" min="0"><br><br>

        <label for="calories_burned">Calories Burned</label>
        <input type="number" id="calories_burned" name="calories_burned" min="0"><br><br>

        <button type="submit" class="nav-btn">Add Achievement</button>
    </form>

    <p><a href="/" class="nav-btn">üè† Back to Home</a></p>
</body>
</html>