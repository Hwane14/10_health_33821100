<!DOCTYPE html>
<html>
<head>
  <title>Register - <%= appName %></title>
  <link rel="stylesheet" href="/main.css">
</head>
<body>
  <h1>Register for <%= appName %></h1>

  <!-- Display errors -->
  <% if (errors && errors.length > 0) { %>
    <ul class="error-list">
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/registered" method="post">
    <label for="first">First Name:</label>
    <input type="text" id="first" name="first" required><br><br>

    <label for="last">Last Name:</label>
    <input type="text" id="last" name="last" required><br><br>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required><br><br>

    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required><br><br>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required><br><br>

    <button type="submit" class="nav-btn">Register</button>
  </form>

  <p><a href="/" class="nav-btn">ğŸ  Back to Home</a></p>
</body>
</html>